<p id="notice"><%= notice %></p>

<h1>Listing Activities</h1>

<table>
  <thead>
    <tr>
      <th>Num hours</th>
      <th>Worker</th>
      <th>Task</th>
      <th>Observation</th>
      <th>Date activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="activities">
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.num_hours %></td>
        <td><%= activity.worker %></td>
        <td><%= activity.task %></td>
        <td><%= activity.observation %></td>
        <td><%= activity.date_activity %></td>
        <td><%= link_to 'Show', project_activity_path(@project, activity) %></td>
        <td><%= link_to 'Edit', edit_project_activity_path(@project, activity) %></td>
        <td><%= link_to 'Destroy', project_activity_path(@project, activity) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

