<p id="notice"><%= notice %></p>

<h1><%=	t(:list_worker) %></h1>

<div class="small-2 large-8">
  <table>
    <thead>
    <tr>
      <th><%=	t(:name) %></th>
      <th><%=	t(:cost_hour) %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.cost_hour %></td>
        <td><%= link_to t(:show), worker, class: "show" %></td>
        <td><%= link_to t(:edit), edit_worker_path(worker) %></td>
        <td><%= link_to t(:destroy), worker, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>

<br>

<%= link_to t(:new_worker), new_worker_path, class: "button newWorker" %>
