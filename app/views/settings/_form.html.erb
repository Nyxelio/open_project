<%= form_for(@setting) do |f| %>
    <% if @setting.errors.any? %>
        <div id="" class="alert callout">
          <ul>
            <% @setting.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

  <div class="field">
    <%= f.label t(:label, scope: 'actions') %><br>
    <%= f.text_field :label %>
  </div>
  <div class="field">
    <%= f.label t(:value, scope: 'actions') %><br>
    <%= f.text_field :value %>
  </div>
  <div class="actions">
    <%= f.submit class: 'button', value: action %>
  </div>
<% end %>
