<p id="notice"><%= notice %></p>

<h1>Liste des catégories</h1>

<div class="small-2 large-6">
  <table>
    <thead>
    <tr>
      <th>Nom</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= family.label %></td>
        <td><%= link_to 'Voir', family %></td>
        <td><%= link_to 'Editer', edit_family_path(family) %></td>
        <td><%= link_to 'Supprimer', family, method: :delete, data: { confirm: 'Êtes-vous sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>
<br>

<%= link_to 'Nouvelle catégorie', new_family_path, class: 'button' %>
