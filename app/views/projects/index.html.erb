<p id="notice"><%= notice %></p>

<h1><%= t(:list_projects) %></h1>


<div class="small-2 large-10">
  <table>
    <thead>
    <tr>
      <th><%= t(:name) %></th>
      <th><%= t(:is_close) %></th>
      <th><%= t(:estimated_start_at) %></th>
      <th><%= t(:estimated_end_at) %></th>
      <th><%= t(:estimated_duration) %></th>
      <th><%= t(:real_start_at) %></th>
      <th><%= t(:real_end_at) %></th>
      <th><%= t(:real_duration) %></th>
      <th><%= t(:difference_hour) %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.is_close %></td>
        <td><%= project.estimated_start_at %></td>
        <td><%= project.estimated_end_at %></td>
        <td><%= project.estimated_duration %></td>
        <td><%= project.real_start_at %></td>
        <td><%= project.real_end_at %></td>
        <td><%= project.real_duration %></td>
        <td><%= project.difference_hour %></td>
        <td><%= link_to t(:show), project %></td>
        <td><%= link_to t(:edit), edit_project_path(project) %></td>
        <td><%= link_to t(:destroy), project, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>


<div class="row">
  <% @projects.each do |project| %>
      <div class="columns small-4 large-3 project-container">
        <div class="callout">
          <h5><%= link_to project.name, project_path(project)%></h5>
        </div>
      </div>
  <% end %>
</div>

<%= link_to t(:new_project), new_project_path, class: "button newProject" %>
